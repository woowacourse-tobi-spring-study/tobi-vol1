<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="dataSource" class="org.springframework.jdbc.datasource.SimpleDriverDataSource">
        <property name="driverClass" value="com.mysql.cj.jdbc.Driver"/>
        <property name="url"
                  value="jdbc:mysql://localhost:13306/testdb?useSSL=false&amp;serverTimezone=UTC&amp;characterEncoding=utf8"/>
        <property name="username" value="root"/>
        <property name="password" value="root"/>
    </bean>
    <bean id="userDao" class="springbook.user.dao.UserDaoJdbc">
        <constructor-arg ref="dataSource"/>
    </bean>
    <bean id="platformTransactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSource"></property>
    </bean>
    <bean id="mailSender" class="springbook.user.service.DummyMailSenderImpl">
    </bean>
    <bean id="userLevelUpgradePolicy" class="springbook.user.service.DefaultUpgradePolicy"/>
    <bean id="userService" class="springbook.user.service.UserServiceImpl">
        <constructor-arg name="userDao" ref="userDao"/>
        <constructor-arg name="userLevelUpgradePolicy" ref="userLevelUpgradePolicy"/>
        <constructor-arg name="platformTransactionManager" ref="platformTransactionManager"/>
        <constructor-arg name="mailSender" ref="mailSender"/>
    </bean>

</beans>